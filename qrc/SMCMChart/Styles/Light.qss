/* QDockWidget */

QDockWidget {
    titlebar-close-icon: url(":/Icons/CloseDockWindow.png");
    titlebar-normal-icon: url(":/Icons/MaximizeDockWindow.png");
    color: white;
}

QDockWidget::title {
    text-align: center left;
    background: rgb(0, 122, 204);
    height: 20px;
    padding-right: 24px
}

QDockWidget::close-button {
    subcontrol-origin: margin;
    position: absolute;
    top: 0px;
    right: 0px;
    bottom: 0px;
    width: 24px;
}

QDockWidget::float-button {
    subcontrol-origin: border;
    position: absolute;
    top: 0px;
    right: 24px;
    bottom: 0px;
    width: 24px;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
    border-style: none;
    background: rgb(65, 156, 218);
}