/* QMainWindow */

QMainWindow {
    background: rgb(239, 239, 242); 
}

QMainWindow::separator {
    border-right: 1px solid rgb(204, 206, 219);
    border-left: 1px solid rgb(204, 206, 219);
    width: 6px;
    height: 6px;
}


/* QMenuBar */

QMenuBar {
    border-style: none;
}


/* QToolBar */

QToolBar {
    border-style: none;
    spacing: 0px;
}


/* StatusBar */


StatusBar[ready = true] {
    color: white;
    background: rgb(0, 122, 204);
}

StatusBar[ready = false] {
    color: white;
    background: rgb(202, 81, 0);
}


/* QTreeView */

QTreeView {
    show-decoration-selected: 1;
}

QTreeView::item {
    height: 17px;
}

